<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.main.actions">
            <block class="Aheadworks\Afptc\Block\Adminhtml\Page\Menu" name="aw_afptc_menu">
                <block class="Aheadworks\Afptc\Block\Adminhtml\Page\Menu\Item" name="aw_afptc_menu_item.rules">
                    <arguments>
                        <argument name="path" xsi:type="string">*/rule/index</argument>
                        <argument name="label" xsi:type="string">Rules</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_Afptc::rules</argument>
                        <argument name="controllers" xsi:type="array">
                            <item name="0" xsi:type="string">rule</item>
                        </argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Afptc\Block\Adminhtml\Page\Menu\Item" name="aw_afptc_menu_item.settings">
                    <arguments>
                        <argument name="path" xsi:type="string">adminhtml/system_config/edit/section/aw_afptc</argument>
                        <argument name="label" xsi:type="string">Settings</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_Afptc::config_aw_afptc</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Afptc\Block\Adminhtml\Page\Menu\Item" name="aw_afptc_menu_item.readme">
                    <arguments>
                        <argument name="label" xsi:type="string">Readme</argument>
                        <argument name="link_attributes" xsi:type="array">
                            <item name="href" xsi:type="string">https://aheadworks.atlassian.net/wiki/spaces/EUDOC/pages/1220837450/Add+Free+Product+to+Cart+-+Magento+2</item>
                            <item name="target" xsi:type="string">_blank</item>
                            <item name="class" xsi:type="string">separator</item>
                        </argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Afptc\Block\Adminhtml\Page\Menu\Item" name="aw_afptc_menu_item.support">
                    <arguments>
                        <argument name="label" xsi:type="string">Get Support</argument>
                        <argument name="link_attributes" xsi:type="array">
                            <item name="href" xsi:type="string">http://ecommerce.aheadworks.com/contacts/</item>
                            <item name="target" xsi:type="string">_blank</item>
                        </argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
